<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".session2.ForgotPassword"
    android:background="@color/white">

    <Button
        android:id="@+id/BT_SignUp3"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/borders_button"
        android:text="Send OTP"

        app:backgroundTint="@color/grey2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_name" />

    <TextView
        android:id="@+id/have_accaont3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:gravity="top"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="0sp"
        android:text="Remember password? Back to"
        android:textAppearance="@style/already_hav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BT_SignUp3" />

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:fontFamily="@font/roboto_regular"
        android:text="Sign in"
        android:textAppearance="@style/sign_in"
        app:layout_constraintBottom_toBottomOf="@+id/have_accaont3"
        app:layout_constraintStart_toEndOf="@+id/have_accaont3"
        app:layout_constraintTop_toTopOf="@+id/have_accaont3" />

    <EditText
        android:id="@+id/ET_name"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/borders_editing"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="***********@mail.com"
        android:textColor="#3A3A3A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/lablename4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Email Address"
        app:layout_constraintBottom_toTopOf="@+id/ET_name"
        app:layout_constraintStart_toStartOf="@+id/ET_name" />

    <TextView
        android:id="@+id/welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="183dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Enter your email address"
        android:textAppearance="@style/complete_th"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/welcome_back"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back" />

</androidx.constraintlayout.widget.ConstraintLayout>